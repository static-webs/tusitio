{
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "bracketSameLine": true,
  "htmlWhitespaceSensitivity": "ignore",
  "insertPragma": false,
  "jsxSingleQuote": true,
  "printWidth": 120,
  "proseWrap": "preserve",
  "quoteProps": "as-needed",
  "requirePragma": false,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "none",
  "useTabs": false,
  "endOfLine": "lf",
  "embeddedLanguageFormatting": "auto",
  "tailwindStylesheet": "assets/css/main.css",
  "tailwindFunctions": ["clsx", "cn"],
  "plugins": ["prettier-plugin-tailwindcss"],
  "overrides": [
    {
      "files": ["assets/css/**/*.css", "assets/js/**/*.js", "html/**/*.html"],
      "options": {
        "semi": false
      }
    },
    {
      "files": ["**/*.json", "**/*.jsonc"],
      "options": {
        "printWidth": 80
      }
    }
  ]
}
